<resources>

    <style name="MySelectPhotoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDarkMain</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMain</item>
        <item name="colorAccent">@color/colorAccentMain</item>
    </style>

    <!-- popWindow-->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <!--AudioRecorder-->
    <style name="AudioDialog">
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!--<item name="android:background">@drawable/dialog_loading_bg</item>-->
    </style>

    <style name="BigPhotoActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/main_black</item>
        <item name="android:windowNoTitle">true</item>
    </style>


</resources>
